<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bloodbackground"
    tools:context="com.example.root.com.example.root.ExtraActivities.Contact_Us">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/etname"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/etmessage"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/etname"
        android:layout_alignLeft="@+id/etname"
        android:layout_alignStart="@+id/etname" />

    <Button
        android:text="Send"
        android:id="@+id/btnsend"

        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="218dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#0711A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/etmessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:textColor="@color/white"
        android:id="@+id/textView23"
        android:layout_alignTop="@+id/etname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Message"
        android:textColor="@color/white"
        android:id="@+id/textView24"
        android:layout_alignTop="@+id/etmessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
